<script>
        function supery(ar1, yes, no) {
            if (ar1 < 0) yes(ar1);
            else no(ar1);
        }

        function callbackYes() {
            console.log(x * -3);
        }

        function callbackNo() {
            console.log(2 * (x * x) - 1);
        }

        let x = Number(prompt("Введи x"));
        supery(x, callbackNo, callbackYes);

    </script>
